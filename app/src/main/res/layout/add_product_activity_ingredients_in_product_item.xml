<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/dark_grey">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
    <TextView
        android:id="@+id/add_product_activity.ingredients_in_product_item.name"
        android:layout_weight="2"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/add_product_activity.ingredients_in_product_list_item.weight"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/grey"
            android:textAlignment="center" />
    </LinearLayout>
    <TextView
        android:id="@+id/add_product_activity.ingredients_in_product_item.method_of_cook"
        android:layout_weight="3"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="match_parent"/>
</LinearLayout>